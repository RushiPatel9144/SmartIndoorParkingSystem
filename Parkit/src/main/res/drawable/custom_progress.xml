<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Layer -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <solid android:color="#E0E0E0"/> <!-- Light grey background -->
        </shape>
    </item>

    <!-- Progress Layer -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="12dp"/> <!-- Match background corners -->
                <solid android:color="@color/theme"/> <!-- Green progress bar -->
            </shape>
        </clip>
    </item>
</layer-list>

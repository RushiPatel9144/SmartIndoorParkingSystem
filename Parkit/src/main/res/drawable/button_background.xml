        <shape>
            <solid android:color="@color/colorPrimaryDark"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/theme"/>
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg">

    <!-- Parking Location Name -->
    <TextView
        android:id="@+id/locationNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parking Location Name"
        android:textSize="20sp"
        android:textColor="#4A4A4A"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif-medium"/>

    <EditText
        android:id="@+id/locationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Location Name"
        android:textColorHint="#888888"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Address Search -->
    <TextView
        android:id="@+id/addressLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Address"
        android:textSize="20sp"
        android:textColor="#4A4A4A"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif-medium"/>

    <AutoCompleteTextView
        android:id="@+id/addressSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for an address"
        android:textColorHint="#888888"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <!-- Price -->
    <TextView
        android:id="@+id/priceLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price per Hour"
        android:textSize="20sp"
        android:textColor="#4A4A4A"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif-medium"/>

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Price"
        android:textColorHint="#888888"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:inputType="numberDecimal"
        android:layout_marginBottom="24dp"/>

    <!-- Additional Options (Optional) -->
    <TextView
        android:id="@+id/additionalOptionsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Additional Options"
        android:textSize="20sp"
        android:textColor="#4A4A4A"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif-medium"/>

    <!-- Option 1: Available Slots -->
    <CheckBox
        android:id="@+id/slotOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add parking slots"
        android:textSize="16sp"
        android:textColor="#4A4A4A"
        android:layout_marginBottom="16dp"/>

    <!-- Option 2: Parking Type -->
    <RadioGroup
        android:id="@+id/parkingTypeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/indoorRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indoor"
            android:textSize="16sp"
            android:textColor="#4A4A4A"/>

        <RadioButton
            android:id="@+id/outdoorRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outdoor"
            android:textSize="16sp"
            android:textColor="#4A4A4A"/>
    </RadioGroup>

    <!-- Button to Save Location -->
    <Button
        android:id="@+id/saveLocationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_location"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@color/theme"
        android:layout_marginTop="24dp"
        android:enabled="false"
        android:padding="14dp"
        android:layout_gravity="center"/>
</LinearLayout>

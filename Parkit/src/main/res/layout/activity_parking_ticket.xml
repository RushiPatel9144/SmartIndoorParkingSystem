<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:padding="16dp">

    <!-- Main CardView for Confirmation -->
    <ImageView
        android:id="@+id/thumbsUpIcon"
        android:layout_width="91dp"
        android:layout_height="89dp"
        android:src="@drawable/smile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toBottomOf="@id/thumbsUpIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footerLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Booking Confirmation Text -->
            <TextView
                android:id="@+id/bookingConfirmationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your parking is booked!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="12dp"/>

            <!-- Email Confirmation -->
            <TextView
                android:id="@+id/emailConfirmationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You will receive confirmation on your email."
                android:textSize="16sp"
                android:textColor="#666666"
                app:layout_constraintTop_toBottomOf="@id/bookingConfirmationText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- QR Code -->
            <ImageView
                android:id="@+id/qrCodeImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/qr"
                app:layout_constraintTop_toBottomOf="@id/emailConfirmationText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Reference Number -->
            <TextView
                android:id="@+id/referenceNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PARKING TICKET NUMBER"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/qrCodeImage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/referenceNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#4563455"
                android:textSize="16sp"
                android:textColor="#333333"
                app:layout_constraintTop_toBottomOf="@id/referenceNumberLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Address CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/addressCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#F0F0F0"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/referenceNumberTextView"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/addressTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parking Address"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/addressText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Building No. 26, Al Barsha 2, Street 43 A.T., Dubai, UAE"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <!-- Footer Buttons (GET DIRECTION & CANCEL) -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Get Direction Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/getDirectionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:text="GET DIRECTION"
            app:cornerRadius="16dp"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="#369765"
            app:strokeWidth="2dp"
            app:rippleColor="#369765"
            android:textColor="#FFFFFF"
            android:backgroundTint="#369765"
            app:iconTint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:text="Close"
            app:cornerRadius="16dp"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeWidth="2dp"
            app:strokeColor="#FF4C4C"
            app:rippleColor="#FF0000"
            android:textColor="#FF4C4C"
            android:backgroundTint="#FFFFFF"
            app:iconTint="#FF4C4C"
            app:layout_constraintTop_toTopOf="parent"
            app:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

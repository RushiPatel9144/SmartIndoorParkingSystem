<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="Help"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Help Topic Label -->
        <TextView
            android:id="@+id/tvHelpTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHeader"
            android:layout_marginTop="16dp"
            android:text="Help Topic"
            android:textSize="16sp" />

        <!-- Help Topic EditText -->
        <EditText
            android:id="@+id/etHelpTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHelpTopic"
            android:layout_marginTop="8dp"
            android:hint="Enter your help topic"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background" />

        <!-- Help Description Label -->
        <TextView
            android:id="@+id/tvHelpDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etHelpTopic"
            android:layout_marginTop="16dp"
            android:text="Help Description"
            android:textSize="16sp" />

        <!-- Help Description EditText -->
        <EditText
            android:id="@+id/etHelpDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvHelpDescription"
            android:layout_marginTop="8dp"
            android:hint="Describe your issue here"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:inputType="textMultiLine"
            android:lines="4"
            android:gravity="top" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmitHelp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etHelpDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:text="Submit"
            android:textAllCaps="false"
            android:backgroundTint="@color/logo"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</ScrollView>

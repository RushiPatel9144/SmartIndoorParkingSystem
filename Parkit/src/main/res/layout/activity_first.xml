<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".launcherActivity.FirstActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/firstBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/firstactivitybg" />

    <!-- Semi-Transparent Overlay to Dim Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000" /> <!-- 50% opaque black overlay -->

    <!-- Centered Title Text -->
    <TextView
        android:id="@+id/pkit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/parkit"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/firstSignInBut"
        android:fontFamily="@font/poppins_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="450dp"
        android:background="@drawable/blur_button_bg"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="30dp"
        android:paddingBottom="10dp"
        android:elevation="10dp"
        android:text="@string/sign_in_as_user"
        android:textSize="16sp"
        android:textColor="@android:color/white" />

    <!-- Sign Up as Owner Button -->
    <Button
        android:id="@+id/firstSignUpAsOwnerBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="520dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/blur_button_bg"
        android:elevation="10dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="30dp"
        android:paddingTop="10dp"
        android:paddingEnd="30dp"
        android:paddingBottom="10dp"
        android:text="@string/sign_in_as_owner"
        android:textSize="16sp"
        android:textColor="@android:color/white" />

</FrameLayout>

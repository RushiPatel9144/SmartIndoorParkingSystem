<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#EFF4F1"> <!-- Lightest green tint -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Price Section at Top-Right -->
        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/booking_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/price_layout"
            android:paddingTop="16dp">

            <!-- Address Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/booking_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="474 Bathurst St, Toronto"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:textStyle="bold"
                android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- Slot Number Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/slot_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slot Number:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/booking_slot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A4"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:textStyle="bold"
                android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <!-- Booking Date Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/booking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nov 23, 2024 21:00 - Nov 23, 2024 22:00"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:textStyle="bold"
                android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Passkey Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/passkey_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passkey: EXPIRED"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/booking_pass_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pass Key (Expired)"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

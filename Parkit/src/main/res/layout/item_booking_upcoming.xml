<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="8dp"
    android:theme="@style/LocationFragment"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"> <!-- Lightest green color -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Price Section -->
        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/booking_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$25.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_layout"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Address Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/address_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/booking_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="474 Bathurst St Parking"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Slot Number Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/slot_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slot Number:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/booking_slot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A4"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Booking Date Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/time_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Date:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/booking_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nov 23, 2024 21:00 - Nov 23, 2024 22:00"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- Passkey Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/passkey_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passkey:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/booking_pass_key"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5053"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <!-- Cancel Button -->
                <Button
                    app:cornerRadius="30dp"
                    android:id="@+id/cancel_button"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/holo_red_dark"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:paddingTop="8dp"
                    android:layout_margin="5dp"
                    android:elevation="4dp" />
                <!-- Cancel Button -->
                <Button
                    android:id="@+id/gate_button_upcomingBooking"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="@string/access"
                    app:cornerRadius="30dp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/theme"
                    android:textColor="@android:color/white"
                    android:paddingTop="8dp"
                    android:layout_margin="5dp"
                    android:elevation="4dp" />

            </LinearLayout>



        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>

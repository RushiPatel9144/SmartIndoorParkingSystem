<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/firstBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/firstactivitybg" />

    <!-- Semi-Transparent Overlay to Dim Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000" />

    <TextView
        android:id="@+id/onBoard_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/onBoard_imageView"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/baseline_add_location_24" />

    <TextView
        android:id="@+id/onBoard_descriptionTextView"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="200dp" />


    <Button
        android:id="@+id/onBoard_getStartedButton"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/poppins_medium"
        android:radius="90dp"
        android:textAllCaps="false"
        android:background="@drawable/blur_button_bg"
        android:elevation="10dp"
        android:textColor="@android:color/white"
        android:text="@string/get_started"
        android:visibility="gone" /> <!-- Set visibility to 'gone' by default -->



</FrameLayout>

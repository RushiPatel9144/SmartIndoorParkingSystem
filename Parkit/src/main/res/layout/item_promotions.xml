<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Title and Description in a Vertical Layout on the Left -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title TextView -->
            <TextView
                android:id="@+id/PromotionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/promotion_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="4dp"/>

            <!-- Description TextView -->
            <TextView
                android:id="@+id/PromotionDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/promotion_description_goes_here"
                android:textSize="16sp"/>

        </LinearLayout>

        <!-- Discount TextView (Large and on the right) -->
        <TextView
            android:id="@+id/PromotionDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_20"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:paddingStart="16dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HomeFragment">

    <!-- TextView with big font size for greeting -->
    <TextView
        android:id="@+id/tv_greeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/good_morning_user"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- TextView for additional messages -->
    <TextView
        android:id="@+id/tv_additional_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Park it\nPark Smart, Live Easy!"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- ImageView occupying more space -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/img_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/green_car"
            android:contentDescription="Top Image"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>


    <!-- ScrollView occupying the bottom part of the screen -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Browse Nearby Spaces Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_browse_nearby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spot the Perfect Spot!"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_find_best_parking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Your next parking spot is just a tap awayâ€”park smarter, not harder!"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btn_view_map"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Map"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Promotions Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_promo_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Park &amp; Save Big!"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_promo_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Why just park when you can save big? Explore promos now!"
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btn_view_promotions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Promotions"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Favorites Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_favorites_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Favorites at Your Fingertips!"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_favorites_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Quickly access your go-to parking spots in one click."
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btn_view_favorites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Favorites"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- History Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_history_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trace Your Journey!"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_history_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Review your parking past to plan smarter moves in the future."
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btn_view_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View History"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Rating Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_rating_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We Value Your Feedback!"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_rating_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Help us improve by sharing your thoughtsâ€”it only takes a moment."
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btn_rate_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate Now"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Help Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/help_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_help_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weâ€™re Here for You!"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_help_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Got questions? Let us guide you every step of the way."
                        android:textSize="16sp"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btn_get_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get Help"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

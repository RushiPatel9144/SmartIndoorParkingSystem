<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    >
    <!-- Set background color for splash screen -->
    <ImageView
        android:id="@+id/firstBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/firstactivitybg" />

    <!-- Semi-Transparent Overlay to Dim Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B7000000" /> <!-- 50% opaque black overlay -->

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:contentDescription="@string/app_logo"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView

        android:id="@+id/splash_text"
        android:layout_width="297dp"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/book_parking_spots_at_your_fingertips"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="27sp"
        android:textStyle="bold" />

</FrameLayout>

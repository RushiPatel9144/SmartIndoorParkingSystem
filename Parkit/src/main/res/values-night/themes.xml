<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base Night Theme -->
    <style name="Base.Theme.SmartIndoorParkingSystem.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme</item>
        <item name="colorPrimaryVariant">@color/theme</item>
        <item name="colorOnPrimary">@color/bg_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_theme</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Set translucent status bar -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="actionOverflowButtonStyle">@style/OverflowMenuStyle</item>
        <!-- Optional: Light status bar icons for a dark background -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Background color for light theme -->
        <item name="android:windowBackground">@color/bg_dark</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textColor">@color/bg</item>
        <item name="android:textAppearance">@font/poppins_medium</item>
        <item name="toolbarStyle">@style/CustomToolbarStyle</item>
    </style>

    <!-- Overflow menu style for Night -->
    <style name="OverflowMenuStyle.Night" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#FFFFFF</item> <!-- White tint for overflow menu -->
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
    </style>

    <!-- Menu item text color for Night -->
    <style name="MenuItemTextColor.Night" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/bg_dark</item> <!-- White menu text -->
    </style>

    <!-- Owner theme for Night -->
    <style name="OwnerTheme.Night" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">#121212</item> <!-- Match primary dark color -->
        <item name="android:windowBackground">#1E1E1E</item> <!-- Slightly lighter background -->
    </style>



    <style name="CustomToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textColor">#FFFFFF</item> <!-- White title text -->
        <item name="android:backgroundTint">@color/bg_dark</item>>
    </style>

    <!-- Spinner style for Night -->
    <style name="CustomSpinnerStyle.Night" parent="Widget.AppCompat.Spinner">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White text color for dropdown -->
        <item name="android:popupBackground">#333333</item> <!-- Dark dropdown background -->
    </style>

    <!-- Location fragment theme for Night -->
    <style name="LocationFragment.Night" parent="Base.Theme.SmartIndoorParkingSystem.Night">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Base application theme -->
    <style name="Theme.SmartIndoorParkingSystem.Night" parent="Base.Theme.SmartIndoorParkingSystem.Night" />

    <!-- Another fallback for base -->
    <style name="Base.Base.Theme.SmartIndoorParkingSystem.Night" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize if needed -->
    </style>
</resources>
